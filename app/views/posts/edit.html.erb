<h1>Edit Post id: <%= @post.id %></h1>

<%= form_for @post, url: post_path(@post), method: :patch do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', posts_path %>
